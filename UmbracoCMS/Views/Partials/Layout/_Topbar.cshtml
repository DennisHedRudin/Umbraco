@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<HomePage>

@{
	var rootContent = Umbraco.ContentAtRoot();
	var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();

	var contactAdress = siteSettings?.ContactAddress ?? "Ingen adress angiven";
}

<div class="bg-[var(--color-main)]">
	<div class="max-w-7xl mx-auto px-4 flex items-center justify-between">
		<p class="text-xs text-white">@contactAdress</p>

		<div class="flex">

			@if (siteSettings?.PlatformList != null)
			{
				foreach (var item in siteSettings.PlatformList)
				{
					if (item.Content is SocialMediaItem mediaItem)
					{
						switch (mediaItem.PlatformName!.ToLower())
						{
							case "facebook":
								<a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center p-3 text-base text-white border-l border-[#606966] last:border-r">
									<i class="fa-brands fa-facebook-f"></i>
								</a>
								break;

							case "x":
								<a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center p-3 text-base text-white border-l border-[#606966] last:border-r">
									<i class="fa-brands fa-x-twitter"></i>
								</a>
								break;

							case "linkedin" :
								<a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center p-3 text-base text-white border-l border-[#606966] last:border-r">
									<i class="fa-brands fa-linkedin-in"></i>
								</a>
								break;

							
						}
					}
				}
			}

		</div>
	</div>
</div>