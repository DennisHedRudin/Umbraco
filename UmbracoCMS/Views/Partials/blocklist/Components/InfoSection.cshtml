@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using UmbracoCMS.ViewModels
@{
    var content = (ContentModels.InfoSection)Model.Content;
}


<section class="my-[6rem]">
    <div class="max-w-7xl mx-auto px-4 flex flex-row gap-[2.5rem]">
        <div class="flex flex-col basis-1/3 gap-[1rem]">
            @if (content.InfoImage != null)
            {
                <img src="@content.InfoImage.Url()" alt="" class="w-[400px] h-[571px] object-cover">
            }
            <div class="text-rte-sm font-regular">@content.InfoTitle</div>

        </div>
        
        <div class="rte basis-2/3">@Html.Raw(content.InfoBody)</div>
        



    </div>
</section>