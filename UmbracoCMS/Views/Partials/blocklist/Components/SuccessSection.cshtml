@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using UmbracoCMS.ViewModels
@{
    var content = (ContentModels.SuccessSection)Model.Content;

    var statList = content.SuccessStat;
}

<section class="bg-main pt-[6rem]">
    <div class="max-w-7xl max-h-[840px] mx-auto flex flex-col gap-[1rem] items-center bg-no-repeat bg-translate-y-[30px] bg-translate-x-[20px] [background-image:url('/Images/Dotworld.svg')]">

        <div class="flex flex-col items-center">
            <p class="text-secondary font-bold text-rte-xs">@content.SuccessLabel</p>
            <h3 class="text-neutral font-bold text-rte-lg">@content.SuccessTitle</h3>
        </div>


        <div class="flex gap-[3rem] justify-center">
            @if (statList != null)
            { 
                for (var i = 0; i < statList.Count; i++)
                {
                    var stat = statList[i];

                    <partial name="Partials/Blocklist/Components/StatCard" model="stat" />
                }
            }
        </div>

        
            @if (content.SuccessImage != null)
            {
                <img src="@content.SuccessImage.Url()" alt="" class="w-full object-cover max-w-4xl translate-y-[40px] shadow-md" />
            }
        
    </div>
    
   
</section>