@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using UmbracoCMS.ViewModels
@{
    var content = (ContentModels.ContactSection)Model.Content;

    var settings = Model.Settings as ContentModels.ContactSettings;   
    var sectionColor = settings?.ContactBgColor?.Color ?? "#ffffff";

    var rootContent = Umbraco.ContentAtRoot();
    var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();

    var contactAdress = siteSettings?.ContactAddress ?? "Ingen adress angiven";
    var contactPhone = siteSettings?.ContactPhone ?? "Inget nummer angivet";    
    var contactEmail = siteSettings?.ContactEmail ?? "Inge mailadress angivet";
}

<section class=" bg-[@sectionColor] my-[6rem]">
    <div class="max-w-7xl mx-auto px-4 flex flex-row gap-[2.5rem]">
        <div class="flex flex-col basis-1/3 gap-[1rem]">
            @if (content.ContactImage != null)
            {
                <img src="@content.ContactImage.Url()" alt="" class="w-full h-full object-cover">
            }
            

        </div>
        <div>
            <div class="text-main text-rte-lg font-bold">@content.ContactTitle</div>

            <div class="flex">
                <div class="flex flex-col">
                    <div class="flex">
                        <i class="fa-regular fa-location-dot" style="color: #d9c3a9;"></i>
                        <p class="text-rte-xs font-bold text-main">Office location</p>
                    </div>
                    <p class="text-rte-xs font-regular text-body-text">@contactAdress</p>
                </div>

                <div class="flex">
                    <p class="text-rte-xs font-bold text-main"><i class="fa-regular fa-phone fa-rotate-270" style="color: #d9c3a9;"></i>Phone number</p>
                    <p class="text-rte-xs font-regular text-body-text">@contactPhone</p>
                </div>

                <div class="flex">
                    <p class="text-rte-xs font-bold text-main"><i class="fa-regular fa-envelope" style="color: #d9c3a9;"></i>E-mail adress</p>
                    <p class="text-rte-xs font-regular text-body-text">@contactEmail</p>
                </div>
            </div>


        </div>

       

        




    </div>
</section>