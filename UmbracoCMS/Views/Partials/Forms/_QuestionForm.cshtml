@using UmbracoCMS.ViewModels
@model QuestionFormViewModel

@using (Html.BeginUmbracoForm("HandleQuestionForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "questionform" }))
{
    <div class="flex flex-col gap-[1rem]">
        <div class="flex gap-[1rem]">
            <div class="w-full">
                <label asp-for="Name" class="sr-only"></label>
                <input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(x => x.Name)" class="w-full p-3 italic border border-gray-300 focus:ring-2 focus:ring-main focus:outline-none" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="w-full">
                <label asp-for="QuestionEmail" class="sr-only"></label>
                <input asp-for="QuestionEmail" type="text" placeholder="@Html.DisplayNameFor(x => x.QuestionEmail)" class="w-full p-3 italic border border-gray-300 focus:ring-2 focus:ring-main focus:outline-none" />
                <span asp-validation-for="QuestionEmail"></span>
            </div>
        </div>
        <div>
            <div>
                <label asp-for="Question" class="sr-only"></label>
                <textarea asp-for="Question" placeholder="@Html.DisplayNameFor(x => x.Question)" class="w-full p-3 italic border border-gray-300 focus:ring-2 focus:ring-main focus:outline-none" ></textarea>
                <span asp-validation-for="Question"></span>
            </div>
        </div>

        <div class="pb-[2.5rem]">
            <button type="submit" form="questionform" class=" bg-main text-white py-3 px-10 no-underline rounded cursor-pointer self-start font-bold">Submit</button>
        </div>
    </div>
	
       
	
}